<h1>New Post</h1>


<%= form_for :post, url: posts_path do |f| %>
	
	<!--This lets the user know what errors their post has if any-->
	<% if @post.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<!--Standard Ruby form builder-->
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_field :text %>
	</p>
 
	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to 'Back', posts_path %>